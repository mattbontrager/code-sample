{
	"name": "code-sample",
	"version": "1.0.0",
	"description": "A code sample to share with others.",
	"main": "app.js",
	"private": true,
	"scripts": {
		"test": "eslint src test",
		"start": "webpack-dev-server --open"
	},
	"author": "Matt Bontrager <matt.bontrager@icloud.com>",
	"license": "ISC",
	"engines": {
		"node": "v10.16.0"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true,
			"es6": true,
			"mocha": true
		},
		"parserOptions": {
			"ecmaVersion": 8,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single",
				{
					"avoidEscape": true,
					"allowTemplateLiterals": true
				}
			],
			"semi": [
				"error",
				"always"
			],
			"one-var": [
				"error",
				{
					"var": "always",
					"let": "never",
					"const": "never",
					"separateRequires": true
				}
			],
			"no-unused-vars": 0,
			"arrow-parens": [
				"error",
				"as-needed"
			]
		}
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"babel-loader": "^8.0.6",
		"chai": "^4.2.0",
		"clean-webpack-plugin": "^3.0.0",
		"compass-mixins": "^0.12.10",
		"css-loader": "^3.0.0",
		"eslint": "^5.16.0",
		"file-loader": "^4.0.0",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.7.0",
		"mocha": "^6.1.4",
		"node-sass": "^4.12.0",
		"prettier": "^1.18.2",
		"sass-loader": "^7.1.0",
		"sass-resources-loader": "^2.0.1",
		"style-loader": "^0.23.1",
		"webpack": "^4.33.0",
		"webpack-cli": "^3.3.3",
		"webpack-dev-server": "^3.7.1",
		"webpack-md5-hash": "0.0.6"
	}
}
